<div class="bt-sidebar">
  <div id="bt-sidebar-login" class="bt-sidebar__inner">
  	<div class="bt-sidebar__header flex bt-sidebar__header--{% unless enable_rtl %}right{% else %}left{% endunless %}">
  		<h4 class="bt-sidebar__title">
  			{%- unless customer -%}
  				{{ 'customer.login.title' | t }}
  			{%- else -%}
  				{{ 'customer.account.title' | t }}
  			{%- endunless -%}	
  		</h4>
  		{%- render 'sidebar-close-btn' -%}
  	</div>
    <div class="bt-sidebar__content gutter-bottom distance-bottom-ele">
      {%- unless customer -%}
  		  {%- render 'login-form-header', id: 'customer_login_header_mobile', suffix_id_field: 'HeaderMobile', left_holder: left_holder, right_holder: right_holder -%}
	    {%- else -%}
	    	<a href="{{ routes.account_url }}" title="{{ 'customer.account.title' | t | escape }}" class="w100 db">
	    		{%- unless enable_rtl -%}
						{% render 'icon-account' with add_class: 'ver-sub' %}
						{{ 'customer.account.title' | t }}
					{%- else -%}
						{{ 'customer.account.title' | t }}
						{% render 'icon-account' with add_class: 'ver-sub' %}
					{%- endunless -%}
				</a>
				<a href="{{ routes.account_logout_url }}" title="{{ 'layout.customer.log_out' | t | escape }}" class="w100 db gutter-ele-top">
					{%- unless enable_rtl -%}
						{% render 'icon-sign-out' with add_class: 'ver-sub' %}
						{{ 'layout.customer.log_out' | t }}
					{%- else -%}
						{{ 'layout.customer.log_out' | t }}
						{% render 'icon-sign-out' with add_class: 'ver-sub' %}
					{%- endunless -%}	
				</a>
			{%- endunless -%}
    </div>
  </div>
</div>