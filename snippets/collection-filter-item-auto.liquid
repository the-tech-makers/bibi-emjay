<li class="w100 cf__item__link">
  <a href="#" data-value="{{ value | escape }}" class="cf__link cf__link--auto cf__link--option{% if is_current %} current{% endif %} flex flex-align-ver flex-align-space-between">
  	<div class="cf__link-group">
	  	<span class="cf__link__box{% if section.settings.checkboxes_format == 'circle' %} cf__link__box-circle{% endif %}"></span>
	  	<span class="cf__link--title">{{ value }}</span>
	  </div>
  	<span class="cf__link--count">{{ count }}</span>
  </a>
</li>