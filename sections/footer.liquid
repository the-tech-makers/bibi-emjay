  {%- endif -%}
{%- endunless -%}
{%- assign individual_bkg_area = blank -%}
{%- assign inline_style_mb = '' -%}
{%- assign inline_style_dk = '' -%}
<footer class="footer{% if settings.bkg_footer_enable and settings.bkg_footer != blank %} big-gutter-top{% endif %}{% if section.settings.bkg_enable and section.settings.section_bkg != blank %} lazyload lazy-bkg footer--bkg{% endif %}" data-section-type="footer" data-section-id="{{ section.id }}" id="{{ section.id }}"{% if section.settings.bkg_enable and section.settings.section_bkg != blank %} style="background-color:{{ section.settings.section_bkg }};"{% endif %}{% if section.settings.bkg_enable and section.settings.section_bkg_image != blank %} data-bgset="{% render 'bgset' with section.settings.section_bkg_image as image %}" data-sizes="auto"{% endif %}>
  <div class="footer__inner">  
    <div class="container{% if section.settings.wide_display %}-fluid{% endif %}">
      <div class="row flex flex-wrap footer__content">
        {%- assign closed_container = false -%}
        {%- assign closed_row = false -%}
        {%- if section.blocks.size > 0 -%}
          {%- for block in section.blocks -%}
            {%- unless block.type == 'footer-line' -%}
              <div class="col-sm-{{ block.settings.col_width_desktop }} col-xs-{{ block.settings.col_width_mobile }} footer__column{% if block.settings.text_align != block.settings.text_align_mobile %} footer__column--{{ block.id }}{% endif %} footer__column--{{ block.type }} text-{{ block.settings.text_align | escape }}{% if block.settings.text_align != block.settings.text_align_mobile %} mobile-text-{{ block.settings.text_align_mobile }}{% endif %}{% if block.settings.gutter_top_dk %} gutter-ele-top-tb{% endif %}{% if block.settings.gutter_bottom_dk %} gutter-ele-bottom-tb{% endif %}{% if block.settings.gutter_top_mb %} gutter-ele-top-mb{% endif %}{% if block.settings.gutter_bottom_mb %} gutter-ele-bottom-mb{% endif %}" style="float:none;">
                {%- if block.settings.title != blank -%}
                <h4 class="footer__column__title w100">
                  {{ block.settings.title }}
                </h4>
                {%- endif -%}
                <div class="footer__column__content w100"{% if block.type contains 'facebook' or block.type contains 'twitter' %} style="overflow-x: hidden;"{% endif %}>
                  {%- case block.type -%}
                    {%- when 'contact-info' -%}
                      {%- render 'footer-contact-info-column' with block as block -%}
                    {%- when 'facebook-box' -%}
                      {%- render 'footer-facebook-box-column' with block as block -%}
                    {%- when 'link-list' -%}
                      {%- render 'footer-link-list-column' with block as block -%}
                    {%- when 'newsletter' -%}
                      {%- render 'footer-newsletter-column' with block as block -%}
                      {%- capture item_inline_style_mb -%}{%- render 'footer-image-align-styles-mb' with block as block -%}{%- endcapture -%}
                      {%- capture item_inline_style_dk -%}{%- render 'footer-image-align-styles-dk' with block as block -%}{%- endcapture -%}
                      {%- assign inline_style_mb = inline_style_mb | append: item_inline_style_mb -%}
                      {%- assign inline_style_dk = inline_style_dk | append: item_inline_style_dk -%}
                    {%- when 'product-list' -%}
                      {%- render 'footer-product-list-column' with block as block -%}
                    {%- when 'text-social' -%}
                      {%- render 'footer-text-social-column' with block as block -%}
                      {%- capture item_inline_style_mb -%}{%- render 'footer-image-align-styles-mb' with block as block -%}{%- endcapture -%}
                      {%- capture item_inline_style_dk -%}{%- render 'footer-image-align-styles-dk' with block as block -%}{%- endcapture -%}
                      {%- assign inline_style_mb = inline_style_mb | append: item_inline_style_mb -%}
                      {%- assign inline_style_dk = inline_style_dk | append: item_inline_style_dk -%}  
                    {%- when 'twitter-box' -%}
                      {%- render 'footer-twitter-box-column' with block as block -%}
                    {%- else -%}
                      {%- render 'footer-text-icon-column' with block as block -%}  
                  {%- endcase -%}
                </div>
              </div>
            {%- else -%}
              </div>{%- comment -%}Close the current row{%- endcomment -%}
              {%- assign closed_row = true -%}
              {%- if block.settings.full_width and closed_container == false -%}
                </div>{%- comment -%}Close the current container{%- endcomment -%}
                </div>{%- comment -%}Close the current footer__inner{%- endcomment -%}
                {%- assign closed_container = true -%}
              {%- endif -%}
              {%- if block.settings.gutter_top_dk > 0 or block.settings.gutter_top_mb > 0 -%}
                {%- if block.settings.gutter_top_dk > 0 -%}
                <div style="padding-top:{{ block.settings.gutter_top_dk }}px;" class="hidden-xs"></div>
                {%- endif -%}
                {%- if block.settings.gutter_top_mb > 0 -%}
                  <div class="visible-xs w100" style="padding-top:{{ block.settings.gutter_top_mb }}px;"></div>
                {%- endif -%}
              {%- endif -%}
              {%- unless block.settings.hide_line -%}
                <hr style="border-color:{{ block.settings.color }};margin:0;">
              {%- endunless -%}
              {%- if block.settings.enable_bkg and block.settings.bkg_color != blank -%}
                {%- assign individual_bkg_area = block.settings.bkg_color -%}
              {%- else -%}
                {%- assign individual_bkg_area = blank -%}
              {%- endif -%}
              {%- if block.settings.gutter_bottom_dk > 0 or block.settings.gutter_bottom_mb > 0 -%}
                {%- if block.settings.gutter_bottom_dk > 0 -%}
                <div style="padding-top:{{ block.settings.gutter_bottom_dk }}px;" class="hidden-xs"></div>
                {%- endif -%}
                {%- if block.settings.gutter_bottom_mb > 0 -%}
                  <div class="visible-xs w100" style="padding-top:{{ block.settings.gutter_bottom_mb }}px;"></div>
                {%- endif -%}
              {%- endif -%}
              {%- unless forloop.last -%}
                {%- if block.settings.full_width -%}
                <div class="footer__inner"{% if individual_bkg_area != blank %} style="background:{{ individual_bkg_area }};"{% endif %}>  
                  <div class="container{% if section.settings.wide_display %}-fluid{% endif %}">{%- comment -%}Open a new container{%- endcomment -%}
                    {%- assign closed_container = false -%}
                {%- endif -%}
                <div class="row flex flex-wrap footer__content">{%- comment -%}Open a new row{%- endcomment -%}
                  {%- assign closed_row = false -%}
              {%- endunless -%}    
            {%- endunless-%}  
          {%- endfor -%} 
        {%- endif -%}
      {%- unless closed_row -%}  
      </div>
      {%- endunless -%}
    {%- unless closed_container -%}
    </div>  
    </div>
    {%- endunless -%}
</footer>
{%- if section.settings.copyright != blank or section.settings.footer_link != blank -%}
<div class="footer-bottom gutter-top gutter-bottom">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 gutter-ele-bottom-tbs">{{ section.settings.copyright }}</div>
      <div class="col-xs-12 col-sm-6 text-left gutter-ele-top-tbs">
        {%- if linklists[section.settings.footer_link].links.size > 0 -%}
          <ul class="footer__linklist footer__linklist--bottom no-gutter--left list--inline" style="margin: 0 -15px;">
            {% for link in linklists[section.settings.footer_link].links %}
