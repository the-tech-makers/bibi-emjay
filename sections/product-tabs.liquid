{%- assign item_size_org = section.settings.item_size -%}
{%- assign main_thumbnail = section.settings.main_thumbnail -%}

{%- if item_size_org == 'small' -%}
  {%- assign column_count_org = 5 -%}
{%- elsif item_size_org == 'medium' -%}
  {%- assign column_count_org = 4 -%}
{%- elsif item_size_org == 'large' -%}
  {%- assign column_count_org = 3 -%}
{%- else -%}
  {%- assign column_count_org = 2 -%}  
{%- endif -%}
{% capture blockId %}tab_list_{{ section.id }}{% endcapture %}
{%- render 'section-background-start' -%}
<div id="product-tabs_{{ section.id }}" class="product-tabs{% render 'section-gutters-nobkg' %}" data-section-id="{{ section.id }}" data-section-type="product-tabs">
  {%- if section.settings.title != blank -%}
  <div class="section__heading container{% if section.settings.full_width %}-fluid{% endif %}{% if section_heading_custom_class %} {{ section_heading_custom_class }}{% endif %}">
    <h2 class="section__title__text margin0 tbs-text-center">{{ section.settings.title | replace: '<hl>','<span class="section__title__highline">' | replace: '</hl>','</span>' | raw }}</h2>
    <div class="flex flex-align-space-between section__heading__bottom{% if section.settings.sub_title != blank or section.blocks.size > 1 %} gutter-top{% endif %}">
      {%- if section.settings.sub_title != blank -%}
        <h3 class="section__sub-title{% if section.blocks.size > 1 %} section__sub-title-tabs{% endif %}{% if section.blocks.size > 1 %} gutter-ele-bottom-tbs{% endif %}">{{ section.settings.sub_title | raw }}</h3>
      {%- endif -%}
      <ul class="nav nav-tabs section__nav flex{% if section.blocks.size < 2 %} hide{% endif %} use-touch-mobile no-gutter text-uppercase">
        {%- for block in section.blocks -%}
        <li class="nav-tab-item{% if forloop.index == 1 %} active{% endif %} db">
          <a class="data switch db" data-toggle="tab" href="#tab_{{ block.id }}" title="{{ block.settings.title | escape }}">
            <span>{{ block.settings.title }}</span>
          </a>
        </li>
        {%- endfor -%}  
      </ul>
    </div>
  </div>
  {%- endif -%}
  <div class="section__content {% if section.settings.full_width %}container-fluid{% else %}content-fluid-right{% endif %}">
    <div class="nav-tab-content tab-content">
      {%- for block in section.blocks -%}
      {%- assign limit = block.settings.limit | divided_by : 1 -%}
      {%- assign use_slider = false -%}  
      {%- assign use_more_btn = false -%}  
      {%- assign use_infinite_scroll = false -%}  
      {%- if block.settings.layout == 'slider' or block.settings.layout == 'slider_view_all' -%}
        {%- assign use_slider = true -%}
      {%- elsif block.settings.layout == 'grid_load_more' -%}
        {%- assign use_more_btn = true -%}  
      {%- elsif block.settings.layout == 'grid_infinite_scroll' -%}
        {%- assign use_infinite_scroll = true -%}  
      {%- endif -%}
      {%- assign column_count = column_count_org -%}
      {%- assign item_size = item_size_org -%}

      {%- if use_slider -%}
        {%- if block.settings.slider_center_focus -%}
          {%- assign column_count = 3 -%}
          {%- assign item_size = 'large' -%}
        {%- endif -%}
        
        {%- if column_count >= 3 -%}
          {%- assign column_count_mobile = 2 -%}
        {%- else -%}
          {%- assign column_count_mobile = 1 -%}  
        {%- endif -%}

        {%- if block.settings.slider_nav_type == 'arrows' -%}
          {%- assign nav_slider = '"arrows":true,"dots":false,' -%}
        {%- else -%}
          {%- assign nav_slider = '"arrows":false,"dots":true,' -%}  
        {%- endif -%} 

        {%- if block.settings.slider_center_focus -%}
          {%- assign data_slider = '{' | append: nav_slider | append: '"autoplay":false,"infinite":true,"swipe":true,"swipeToSlide":true,"slidesToShow":' | append: column_count | append: ',"slidesToScroll":' | append: column_count | append: ',"centerMode":true,"centerPadding":0,"initialSlide":1,"responsive":[{"breakpoint": 767,"settings":{"slidesToShow": ' | append: column_count_mobile | append: ',"slidesToScroll":' | append: column_count_mobile | append: '}}]}' -%}
        {%- elsif block.settings.slider_rows > 1 -%}
          {%- assign data_slider = '{' | append: nav_slider | append: '"autoplay":false,"infinite":true,"swipe":true,"swipeToSlide":true,"slidesToShow":1,"slidesToScroll":1,"rows":' | append: block.settings.slider_rows | append: ',"slidesPerRow":' | append: column_count | append: ',"responsive":[{"breakpoint": 768,"settings":{"slidesPerRow":2,"slidesToShow":1,"slidesToScroll":1,"adaptiveHeight":true}}]}' -%}
          {%- assign column_count = column_count | times: block.settings.slider_rows -%}
        {%- else -%}
          {%- assign data_slider = '{' | append: nav_slider | append: '"autoplay":false,"infinite":true,"swipe":true,"swipeToSlide":true,"slidesToShow":' | append: column_count | append: ',"slidesToScroll":' | append: column_count | append: ',"responsive":[{"breakpoint": 768,"settings":{"slidesToShow": ' | append: column_count_mobile | append: ',"slidesToScroll":' | append: column_count_mobile | append: '}}]}' -%}
        {%- endif -%}  
      {%- endif -%}

      {%- assign lazy_index = 999 -%}
      {%- if section.settings.use_lazyload -%}
        {%- assign lazy_index = 0 -%}
      {%- endif -%}
      {%- assign use_loading_data = false -%}
      {%- if forloop.first == false or section.settings.use_ajax -%}
        {%- assign use_loading_data = true -%}
      {%- endif -%}
      {%- assign collection = collections[block.settings.collection] -%}
      <div class="tab-pane fade in{% unless block.settings.slider_rows > 1 and block.settings.slider_center_focus == false %} touch-mobile{% endunless %}{% if forloop.index == 1 %} active{% endif %}{% if collection == blank and use_slider %} init-slider-holder{% endif %}" id="tab_{{ block.id }}" {{ block.shopify_attributes }}>
        {%- if block.settings.banner_enable -%}
          <div class="row flex">
            {%- if block.settings.banner_pos == 'left' -%}
              <div class="col-xs-12 col-sm-{{ block.settings.banner_width }}{% unless block.settings.layout == 'slider' %} gutter-ele-top-tb{% endunless %} gutter-ele-bottom-mb{% if block.settings.banner_hide_mobile %} hidden-xs{% endif %}">
                {%- render 'product-tabs-banner' with block as block -%}
              </div>
              <div class="col-xs-12 col-sm-{{ 12 | minus: block.settings.banner_width }}">
                {%- render 'product-tabs-collection' with collection as collection, limit: limit, item_size: item_size, use_slider: use_slider, use_more_btn: use_more_btn, use_infinite_scroll: use_infinite_scroll, lazy_index: lazy_index, column_count: column_count, column_count_mobile: column_count_mobile, use_loading_data: use_loading_data, forloop: forloop, block: block, data_slider: data_slider, main_thumbnail: main_thumbnail, first_tab: forloop.first -%}
              </div>
            {%- else -%}
              <div class="col-xs-12 col-sm-{{ 12 | minus: block.settings.banner_width }}">
                {%- render 'product-tabs-collection' with collection as collection, limit: limit, item_size: item_size, use_slider: use_slider, use_more_btn: use_more_btn, use_infinite_scroll: use_infinite_scroll, lazy_index: lazy_index, column_count: column_count, column_count_mobile: column_count_mobile, use_loading_data: use_loading_data, forloop: forloop, block: block, data_slider: data_slider, main_thumbnail: main_thumbnail, first_tab: forloop.first -%}
              </div>
              <div class="col-xs-12 col-sm-{{ block.settings.banner_width }}{% unless block.settings.layout == 'slider' %} gutter-ele-top-tb{% endunless %} gutter-ele-top-mb{% if block.settings.banner_hide_mobile %} hidden-xs{% endif %}">
                {%- render 'product-tabs-banner' with block as block -%}
              </div>
            {%- endif -%}
          </div>
        {%- else -%}
          {%- render 'product-tabs-collection' with collection as collection, limit: limit, item_size: item_size, use_slider: use_slider, use_more_btn: use_more_btn, use_infinite_scroll: use_infinite_scroll, lazy_index: lazy_index, column_count: column_count, column_count_mobile: column_count_mobile, use_loading_data: use_loading_data, forloop: forloop, block: block, data_slider: data_slider, main_thumbnail: main_thumbnail, slick_fluid: true, first_tab: forloop.first -%}
        {%- endif -%}
      </div>
      {%- endfor -%}
    </div>
  </div>
</div>
{%- render 'section-background-end' -%}
