{%- render 'section-background-start' -%}
{%- liquid
  unless settings.enable_rtl and settings.rtl_language_codes contains request.locale.iso_code
    assign left_holder = 'left'
    assign right_holder = 'right'
    assign enable_rtl = false
  else
    assign left_holder = 'right'
    assign right_holder = 'left'
    assign enable_rtl = true
  endunless
  assign is_customize_page = false
  if section.blocks.size > 0
    assign first_block = section.blocks | first
    if first_block.shopify_attributes != blank
      assign is_customize_page = true
    endif
  endif
-%}
<div id="layer_banner_{{ section.id }}" class="w100 {% unless section.settings.full_wide %}container{% if section.settings.full_width %}-fluid{% endif %}{% endunless %}{% render 'section-gutters-nobkg' %}{% if section.settings.hidden_mobile %} hidden-xs{% endif %}{% if is_customize_page %} customize-page{% endif %}" data-section-id="{{ section.id }}" data-section-type="layer-banner">
  <div class="{% unless section.settings.full_wide %}row{% else %}db w100{% endunless%}">
    {%- capture ver_banner -%}
    {%- if section.settings.ver_banner_enable -%}
    <div class="col-xs-12 col-sm-{{ section.settings.ver_banner_width }} {% if section.settings.ver_banner_no_distance %}no-gutter{% else %}no-gutter-left-mb no-gutter-right-mb {% if section.settings.ver_banner_pos == 'left' %} no-gutter-left-tb gutter-ele-bottom-mb{% else %}no-gutter-right-tb gutter-ele-top-mb{% endif %}{% endif %}">
      {%- for i in (1..3) -%}
        {%- assign ver_image_index = 'ver_banner_' | append: i -%}
        {%- assign ver_url_index = 'ver_banner_url_' | append: i -%}
        {%- if section.settings[ver_image_index] != blank -%}
          <div class="{% unless forloop.first %} gutter-ele-top gutter-ele-top-mb{% endunless %}{% unless forloop.last %} gutter-ele-bottom gutter-ele-bottom-mb{% endunless %}">
            {%- if section.settings[ver_url_index] != blank -%}
              <a class="img-container w100 loading{% if section.settings.ver_effect_enable %} rb__effect{% if section.settings.ver_effect_trans_zoom %} rb__effect--zoom{% endif %}{% if section.settings.ver_effect_trans_slide %} rb__effect--slide{% endif %}{% if section.settings.ver_effect_trans_border %} rb__effect--border{% endif %}{% if section.settings.ver_effect_color != 'none' %} rb__effect--{{ section.settings.ver_effect_color }}{% endif %}{% endif %}" style="padding-top:{{ 1 | divided_by: section.settings[ver_image_index].aspect_ratio | times: 100}}%;" href="{{ section.settings[ver_url_index] }}" title="{{ section.settings[ver_image_index].alt | escape }}">
            {%- else -%}
              <div class="img-container w100 loading{% unless forloop.first %} gutter-ele-bottom gutter-ele-bottom-mb{% endunless %}{% unless forloop.last %} gutter-ele-top gutter-ele-top-mb{% endunless %}{% if section.settings.ver_effect_enable %} rb__effect{% if section.settings.ver_effect_trans_zoom %} rb__effect--zoom{% endif %}{% if section.settings.ver_effect_trans_slide %} rb__effect--slide{% endif %}{% if section.settings.ver_effect_trans_border %} rb__effect--border{% endif %}{% if section.settings.ver_effect_color != 'none' %} rb__effect--{{ section.settings.ver_effect_color }}{% endif %}{% endif %}" style="padding-top:{{ 1 | divided_by: section.settings[ver_image_index].aspect_ratio | times: 100}}%;">    
            {%- endif -%}
              {%- assign img_url = section.settings[ver_image_index] | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
              <img class="img-responsive w100 lazyload img-abs" data-aspectratio="{{ section.settings[ver_image_index].aspect_ratio }}"
                data-src="{{ img_url }}"
                data-sizes="auto"
                alt="{{ section.settings[ver_image_index].alt | escape }}"{% render 'img-one-pixel' %}/>
            {%- if section.settings[ver_url_index] != blank -%}
              </a>
            {%- else -%}
              </div>    
            {%- endif -%}
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>
    {%- endif -%}
    {%- endcapture -%}

    <div class="section__inner col-xs-12" style="float:none;">
      {%- if section.settings.heading != blank -%}
      <div class="section__heading{% if section.settings.sub_title != blank %} section__heading--with-sub{% endif %}">
        <div class="section__title flex flex-align-ver">
          <h2 class="section__title__text margin0 tbs-text-center">{{ section.settings.heading | replace: '<hl>','<span class="section__title__highline">' | replace: '</hl>','</span>' | raw }}</h2>
          {% if section.settings.sub_title != blank %}
            <h3 class="section__sub-title w100 gutter-top">{{ section.settings.sub_title | raw }}</h3>
          {% endif %}
        </div>
      </div>
      {%- endif -%}

      <div class="section__content row">
        {%- capture layer-banner-main -%}
        {%- if section.blocks.size > 0 -%}
          {%- if section.settings.enable_slider -%}
            {%- assign item_size = section.settings.item_size -%}
            {%- assign item_size_number = 1 -%}
            {%- if item_size == 'small' -%}
              {%- assign item_size_class = 'col-xs-6 col-sm-20' -%}
              {%- assign item_size_number = 5 -%}
            {%- elsif item_size == 'medium' -%}
              {%- assign item_size_class = 'col-xs-6 col-sm-3' -%}
              {%- assign item_size_number = 4 -%}
            {%- elsif item_size == 'large' -%}
              {%- assign item_size_class = 'col-xs-6 col-sm-4' -%}
              {%- assign item_size_number = 3 -%}
            {%- elsif item_size == 'very-large' -%}
              {%- assign item_size_class = 'col-xs-12 col-sm-6' -%}
              {%- assign item_size_number = 2 -%}
            {%- else -%}
              {%- assign item_size_class = 'col-xs-12' -%}
              {%- assign item_size_number = 1 -%}  
            {%- endif -%}
            {%- assign item_size_number_mobile = 1 -%} 
            {%- assign lazyload_index = item_size_number -%}
            {%- assign lazyload_index_mobile = 1 -%}
            {%- if section.settings.autoplay_slider -%}
              {%- assign arrow_mobile = '"arrows":false,' -%}
            {%- else -%}
              {%- assign arrow_mobile = '' -%}  
            {%- endif -%}
            {%- assign data_slider = '{"adaptiveHeight":true,"slide":".slide","infinite":false,"swipe":true,"swipeToSlide":true,"slidesToShow":' | append: item_size_number | append: ',"slidesToScroll":' | append: item_size_number | append: ',"responsive":[{"breakpoint": 768,"settings":{' | append: arrow_mobile | append: '"slidesToShow": ' | append: item_size_number_mobile | append: ',"slidesToScroll":' | append: item_size_number_mobile | append: ',"slide":".slide-mobile"}}]' -%}
            {%- if section.settings.autoplay_slider -%}
              {%- assign speed_slider = section.settings.autoplay_speed_slider | times: 1000 -%}
              {%- assign data_slider = data_slider | append: ',"autoplay":true' -%}
              {%- assign data_slider = data_slider | append: ',"autoplaySpeed":' | append: speed_slider -%}
            {%- endif -%}
            {%- unless section.settings.arrow_slider -%}
              {%- assign data_slider = data_slider | append: ',"arrows":false' -%}
            {%- endunless -%}
            {%- if section.settings.arrow_dots -%}
              {%- assign data_slider = data_slider | append: ',"dots":true' -%}
            {%- endif -%}
            {%- assign data_slider = data_slider | append: '}' -%}
          {%- else -%}
            {%- assign lazyload_index = 1 -%}
            {%- assign lazyload_index_mobile = 2 -%}
          {%- endif -%}
          {%- assign close_parent_layer = true -%}
          <div class="flex flex-wrap{% if section.settings.full_wide %} grid--wide{% endif %}{% if section.settings.enable_slider %} use-slider slick--arrow-bottom{% endif %}"{% if section.settings.enable_slider %} data-slider='{{ data_slider }}' style="margin-left:0;margin-right:0;"{% endif %}>
          {%- assign current_index_tb = 0 -%}  
          {%- assign current_index_mobile = 0 -%}  
          {%- for block in section.blocks -%}
            {%- assign item_size = block.settings.item_size -%}
            {%- assign slider_class = '' -%}
            {%- unless block.settings.hide_on_desktop -%}
              {%- assign slider_class = slider_class | append: ' ' | append: 'slide' -%}
              {%- assign current_index_tb = current_index_tb | plus: 1 -%}
            {%- endunless -%}
            {%- unless block.settings.hide_on_mobile -%}
              {%- assign slider_class = slider_class | append: ' ' | append: 'slide-mobile' -%}
              {%- assign current_index_mobile = current_index_mobile | plus: 1 -%}
            {%- endunless -%}
            {%- include block.type -%}
          {%- endfor -%}
          {%- unless close_parent_layer == true -%}
            {%- assign close_parent_layer = true -%}
            {%- include 'layer-banner-close' -%}
          {%- endunless -%}
          </div>
        {%- endif -%}
        {%- endcapture -%}

        <div class="col-xs-12{% if section.settings.full_wide %} no-gutter{% endif %}">
          {%- if section.settings.ver_banner_enable and ver_banner != blank -%}
            {%- liquid
              unless enable_rtl and section.settings.revert_in_rtl
                assign ver_banner_pos = section.settings.ver_banner_pos
              else
                assign ver_banner_pos = section.settings.ver_banner_pos | replace: 'left', 'holder' | replace: 'right', 'left' | replace: 'holder', 'right'  
              endunless
              if ver_banner_pos == 'left'
                echo ver_banner
              endif
              assign gutter_class_main = ' no-gutter'
              unless section.settings.ver_banner_no_distance
                if section.settings.ver_banner_pos == 'left'
                  assign gutter_class_main = ' no-gutter-right-tb no-gutter-left-mb no-gutter-right-mb gutter-ele-top-mb'
                else
                  assign gutter_class_main = ' no-gutter-left-tb no-gutter-left-mb no-gutter-right-mb gutter-ele-bottom-mb'  
                endif
              endunless  
            -%}  
            <div class="col-xs-12 col-sm-{{ 12 | minus: section.settings.ver_banner_width }}{{ gutter_class_main }}">
              {{ layer-banner-main }}
            </div>
            {%- if ver_banner_pos == 'right' -%}
              {{ ver_banner }}
            {%- endif -%}
          {%- else -%}
            {{ layer-banner-main }}  
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</div>
{%- render 'section-background-end' -%}
