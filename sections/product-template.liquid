{%- if template.suffix != 'quick_view' -%}
<div class="product-template-section" id="ProductSection-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="product" data-enable-history-state="true">
{%- endif -%}
  {%- assign current_variant = product.selected_or_first_available_variant -%}
  {%- assign featured_media = product.selected_or_first_available_variant.featured_media | default: product.featured_media -%}
  {%- capture description -%}
    <div class="product-single__description rte{% if template.suffix == 'quick_view' %} product-single__description--quickview custom-scrollbar{% endif %}"{% if template.suffix == 'quick_view' %} style="padding-right:5px;"{% endif %}>
      {{ product.description | replace: '<img src="','<img class="lazyload" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" data-src="' }}
    </div>
  {%- endcapture -%}
  {%- liquid
    assign is_shown_desc = false
    assign sizechart_vendor_key = 'sc_vender_' | append: product.vendor
    assign sizechart_type_key = 'sc_vender_' | append: product.type
    if template.suffix != 'quick_view' and section.settings.size_chart_enable
      if product.metafields.btt.size_chart != blank
        assign sizechart = product.metafields.btt.size_chart
      elsif product.metafields.btt[sizechart_type_key] != blank  
        assign sizechart = product.metafields.btt[sizechart_type_key]
      elsif product.metafields.btt[sizechart_vendor_key] != blank  
        assign sizechart = product.metafields.btt[sizechart_vendor_key]  
      elsif collection and collection.metafields.btt.size_chart and collection.metafields.btt.apply_size_chart_product
        assign sizechart = collection.metafields.btt.size_chart 
      elsif product.collections[0] and product.collections[0].metafields.btt.size_chart and product.collections[0].metafields.btt.apply_size_chart_product
        assign sizechart = product.collections[0].metafields.btt.size_chart  
      elsif section.settings.use_size_chart_fallback and section.settings.size_chart_fallback != blank
        assign sizechart = section.settings.size_chart_fallback | img_url: 'master' | img_tag: section.settings.size_chart_fallback.alt, 'img-responsive'
      elsif product.description contains 'sizechart-table'
        assign sizechart = 'inline'    
      endif
    endif
    assign layout_name = 'product-single-'
    if section.settings.use_one_layout
      assign layout_name = layout_name | append: section.settings.default_layout
    else
      if product.template_suffix contains 'layout'
        assign layout_name = layout_name | append: product.template_suffix
      else
        assign layout_name = layout_name | append: section.settings.default_layout   
      endif
    endif
    unless settings.enable_rtl and settings.rtl_language_codes contains request.locale.iso_code
      assign left_holder = 'left'
      assign right_holder = 'right'
      assign enable_rtl = false
    else
      assign left_holder = 'right'
      assign right_holder = 'left'
      assign enable_rtl = true
    endunless
  -%}
  <div class="product-single pg {{ layout_name }}" data-product-handle="{{ product.handle }}" data-zoom-scope="{% if template.suffix == 'quick_view' %}quick_view{% else %}single{% endif %}" data-ignore-sold-out-text="1"{% if template.suffix != 'quick_view' %} data-history="1"{% endif %}{% if template.suffix != 'quick_view' %} data-sync-pg=".sc"{% endif %}>
    {%- include layout_name with left_holder: left_holder, right_holder: right_holder -%}
    <script type="application/json" class="product-single-json" data-handle="{{ product.handle | escape }}" data-current-variant-id="{{ current_variant.id }}">
      {%- include 'product-tjson' with product: product -%}
    </script>
    <script type="application/json" id="ModelJson-{% if template.suffix != 'quick_view' %}{{ section.id }}{% else %}quickview-{{ product.handle | escape }}{% endif %}" class="model-json">
      {{ product.media | where: 'media_type', 'model' | json }}
    </script>
  </div>

{%- if template.suffix != 'quick_view' -%}
  {%- if layout_name != 'product-single-layout6' -%}
    {%- include 'product-single-tabs' -%}
  {%- endif -%}

  {%- if layout_name != 'product-single-layout4' -%}
  {%- include 'product-single-review-outside-tab' -%}
  {%- endif -%}

  {%- include 'product-single-cross-sell' -%}

  {%- include 'product-single-next-prev' -%}
  {%- if section.settings.sc_enable -%}
  <div class="sc pg w100 hide" data-product-handle="{{ product.handle }}" data-ignore-sold-out-text="1" data-history="1" data-sync-pg=".product-single">
    {%- form 'product', product, id: 'sc__form' -%}
      <div class="sc__inner container por center-block gutter-ele-top gutter-ele-bottom">
        <div class="row flex flex-align-ver">
          <div class="col-xs-3 col-sm-2 col-md-{%- unless product.has_only_default_variant -%}1{% else %}2 text-right{% endunless %}">
            <div class="sc__image-wrap dib">
              <img data-src="{{ featured_media | img_url: '100x' }}"{% include 'img-one-pixel' %} 
                class="sc__image w100 pg__main-image img-responsive lazyload" 
                data-image-size="100x" 
                alt="{{ featured_media.alt | escape }}"/>
            </div>
          </div>
          <div class="col-xs-9 col-sm-4 col-md-2{% unless product.has_only_default_variant %} col-lg-1{% endunless %} no-gutter--{{ left_holder }} text-center mobile-text-left">
            {%- include 'product-single-variant-price' with current_variant as variant -%}
          </div>
          {%- unless product.has_only_default_variant -%}
          <div class="col-xs-12 col-sm-6 col-md-4">
              {%- render 'product-group-variants', product: product enable_product_options: true, color_size: '60x', is_single_view: true, is_show_sub_info: false, is_single_sticky: true  -%}
          </div>
          {%- endunless -%}
          <div class="col-xs-12 col-md-{% unless product.has_only_default_variant %}5 col-lg-6 sc__action-wrap{% else %}8{% endunless %}">
            <div class="sc__action text-left gutter-ele-top-tbs">
              <div class="product-form__item product-form__item--quantity flex{% if align_center_button %} center-block text-center{% endif %} w100">
                {%- if section.settings.show_quantity_selector -%}
                  <div class="qty-box qty-box--single qty-box--sticky flex flex-align-ver flex-align-space-between">
                    <button type="button" class="qty-box__ctrl qty-box__ctrl--descrease flex flex-align-hoz flex-align-ver" aria-label="button">
                      {%- include 'icon-minus' -%}
                    </button>
                    <input type="number" name="quantity" value="1" min="1" class="qty-box__input qty-box__input qty-box__input--sticky qty-box__input--sync qty-box__input--single w100 text-center h100" aria-label="form">
                    <button type="button" class="qty-box__ctrl qty-box__ctrl--increase flex flex-align-hoz flex-align-ver" aria-label="button">
                      {%- include 'icon-plus' -%}
                    </button>
                  </div>
                {%- endif -%}
                <button class="button button--cart add-cart-btn button--single-cart button--single-cart-sticky{% if product.has_only_default_variant %} button--single-cart-sticky-simple{% endif %} button--single-cart add-cart-btn--state button--one-line button--border-transparent por flex flex-align-ver flex-align-hoz" type="submit" name="add" title="{{ 'products.product.add_to_cart' | t | escape }}" aria-label="button" style="height:45px;"{% unless current_variant.available %} disabled="disabled"{% endunless %}>
                  {%- render 'icon-cart' with add_class: 'button__icon' -%}
                  <span class="instock-text"{% unless current_variant.available %} style="display:none;"{% endunless %}>{{ 'products.product.add_to_cart' | t }}</span>
                  <span class="outstock-text"{% if current_variant.available %} style="display: none;"{% endif %}>{{ 'products.product.sold_out' | t }}</span>
                </button>
                {% if section.settings.enable_payment_button %}
                  <div class="shopify-payment-btn-wrap shopify-payment-btn-wrap--sticky{% if product.has_only_default_variant %} shopify-payment-btn-wrap--sticky-simple{% endif %} w100">
                    {{ form | payment_button }}
                  </div>
                {% endif %}
                {%- include 'cart-terms' with for_id: 'sticky-cart', sc_term_fs: 11, small_gutter_top: true -%}
              </div>
              <select name="id" class="hide variant-id">
                {%- for variant in product.variants -%}
                  <option {% if variant == product.selected_or_first_available_variant %} selected="selected" {% endif %} value="{{ variant.id }}">
                    {{ variant.title }}
                  </option>
                {%- endfor -%}
              </select>
            </div>
          </div>
        </div>
      </div>
      <a class="sc__close sc__close--working text-center hidden-xs hidden-sm" href="javascript:void(0);">
        <div class="hidden-xs hidden-sm not-loading">
          <div class="sc__close__active sc__close__active--desktop">
            {% include 'icon-arrow-down' %}
          </div>
          <span class="sc__close__inactive text-uppercase fw-bold">{{ 'products.product.quick_buy' | t }}</span>
        </div>
      </a>
      <div class="visible-xs visible-sm sc__mobile db w100">
        <a class="sc__trigger sc__trigger--close text-center ver-sub por h100" href="#" title="{{ 'general.accessibility.close_modal' | t | escape }}">{%- include 'icon-close' -%}</a>
        <div class="flex flex-align-ver sc__trigger--open">
          <div class="sc__small-price product-price__price col-xs-3 text-right no-gutter">{%- include 'price' with current_variant.price -%}</div>
          <div class="col-xs-6 flex flex-align-ver flex-align-hoz" style="padding:0 10px;">
            <button class="button add-cart-btn button--single-cart button--single-sticky button--style1 w100 distance-top-ele add-cart-btn--state button--one-line flex flex-align-hoz flex-align-ver" type="submit" name="add" title="{{ 'products.product.add_to_cart' | t | escape }}" aria-label="button" style="margin:0;height:43px;font-size:13px;"{% unless current_variant.available %} disabled="disabled"{% endunless %}>
              {% include 'icon-cart' with add_class: 'sc__cart-icon button__icon' %}
              <span class="instock-text"{% unless current_variant.available %} style="display:none;"{% endunless %}>{{ 'products.product.add_to_cart' | t }}</span>
              <span class="outstock-text"{% if current_variant.available %} style="display: none;"{% endif %}>{{ 'products.product.sold_out' | t }}</span>
            </button>
          </div>
          <div class="sc__variant-title col-xs-3 text-left no-gutter">
            <a class="sc__trigger w100 dib" title="{{ 'general.buttons.edit' | t | escape }}" href="#">
              {%- unless settings.enable_rtl and settings.rtl_language_codes contains request.locale.iso_code -%}
                {% include 'icon-edit' %}
              {%- endunless -%}
              {%- unless product.has_only_default_variant -%}<span class="pg__variant-title">{{ current_variant.title }}</span>{%- else -%}<span>{{ 'general.buttons.edit' | t }}</span>{%- endunless -%}
              {%- if settings.enable_rtl and settings.rtl_language_codes contains request.locale.iso_code -%}
                {% include 'icon-edit' %}
              {%- endif -%}
            </a>
          </div>
        </div>
      </div>
    {%- endform -%}
  </div>
  {%- endif -%}

  {%- if settings.upsell_product_page_enable -%}
  <div class="container{% include 'wide-css-class' %}">
    <div class="row">
      <div class="col-xs-12">
        <div class="upsell-ele upsell-ele--single big-gutter-top big-gutter-bottom touch-mobile" data-limit="{{ settings.upsell_product_page_limit | escape }}" data-handle="{{ product.handle | escape }}" data-slider="1">
          <h2 class="upsell-title section__title__text gutter-bottom" style="margin-top:0;">
            {{ 'products.product.upsell_block_title' | t: product_title: product.title }}
          </h2>
        {% render 'judgeme_widgets', widget_type: 'judgeme_preview_badge', jm_style: '', concierge_install: true, product: product %}
          <div class="upsell-list grid grid--medium use-slider use-touch-mobile slick-shadow" data-slider='{"slidesToShow": 4, "responsive": [{"breakpoint": 767,"settings":{"slidesToShow":2}}]}'></div>
          <div class="loading-not-full" style="margin-top:50px;">
            <i class="loading-ajax"></i>
          </div> 
        </div>
      </div>
    </div>
  </div>
  {%- endif -%}

  {%- if settings.recent_view_enable and settings.recent_view_product_enable -%}
  <div class="container{% render 'wide-css-class' %} rencent-view-ele-point">
    <div class="row">
      <div class="col-xs-12">
        <div class="rencent-view-ele big-gutter-top big-gutter-bottom touch-mobile" data-limit="{{ settings.upsell_product_page_limit | escape }}" data-handle="{{ product.handle | escape }}" style="display:none;">
          <h2 class="upsell-title section__title__text gutter-bottom" style="margin-top:0;">
            {{ 'products.product.recent_viewed_products' | t }}
          </h2>
          <div class="recent-view-list grid grid--medium use-slider use-touch-mobile" data-slider='{"slidesToShow": 4, "responsive": [{"breakpoint": 767,"settings":{"slidesToShow":2}}]}'></div>
        </div>
      </div>
    </div>
  </div>
  {%- endif -%}
</div>
{%- endif -%}

{%- if sizechart and sizechart != 'inline' -%}
<div class="modal fade sizeChartModal sizeChartModal{{ section.id }} hide" tabindex="-1" role="dialog" id="sizeChartModal{{ section.id }}">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" data-dismiss="modal" aria-label="Close" class="close">{% render 'icon-close' %}</button>
      </div>
      <div class="modal-body">
        <div class="rte">
          {{ sizechart | raw }}
        </div>
      </div>
    </div>  
  </div>  
</div>  
{%- endif -%}
