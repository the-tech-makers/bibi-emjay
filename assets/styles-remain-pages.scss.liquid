/*Mixins*/
@mixin prefix($property, $value, $prefixes) {
  @each $prefix in $prefixes {
    @if $prefix == webkit {
      -webkit-#{$property}: $value;
    } 
    @else if $prefix == moz {
      -moz-#{$property}: $value;
    } 
    @else if $prefix == ms {
      -ms-#{$property}: $value;
    } 
    @else if $prefix == o {
      -o-#{$property}: $value;
    } 
    @else if $prefix == spec {
      #{$property}: $value;
    } 
    @else  {
      @warn 'Unrecognized prefix: #{$prefix}';
    }
  }
}
@mixin opacity($v1, $v2) {
  opacity: $v1;
  filter: alpha(opacity=$v2);
  -ms-filter:"progid:DXImageTransform.Microsoft.Alpha(Opacity=$v2)";
}
@mixin transition($transition) {
  @include prefix(transition, $transition, ms webkit spec);
}
@mixin display-flex() {
  display: flex;
  flex-flow: row wrap;
}
@mixin border-radius($border-radius) {
  border-radius: $border-radius; 
}
/*justify-content: center|left|right*/
@mixin justify-content($var) {
  justify-content: $var;
}

/*align-items: stretch|center|flex-start|flex-end|baseline|initial|inherit;*/
@mixin align-items($value: stretch) {
  $alt-value: $value;

  @if $value == 'flex-start' {
    $alt-value: start;
  } @else if $value == 'flex-end' {
    $alt-value: end;
  }

  /* sass-lint:disable no-misspelled-properties*/
  -ms-flex-align: $alt-value;
  @include prefix(align-items, $value, webkit moz ms o spec);
}
@mixin box-shadow($box-shadow){  
  box-shadow: $box-shadow; 
}

@mixin transform($transform) {
  transform: $transform;
}
@mixin flex-direction($value) {
  flex-direction: $value;
}
@mixin loading-ajax($width, $height) {
  content: '';
  font-size: $width;
  display: inline-block;
  width: $width;
  height: $height;
  border-radius: 50%;
  border: 2px solid;
  border-right-color: transparent;
  -webkit-animation: spin 2s ease-out infinite;
  animation: spin 2s ease-out infinite;
  margin-top: calc(50% - 4px);
}
@mixin loading-icon($width, $height) {
  content: '';
  font-size: 20px;
  display: block;
  width: $width;
  height: $height;
  border-radius: 50%;
  border: 2px solid #fff;
  border-right-color: transparent;
  -webkit-animation: spin 2s ease-out infinite;
  animation: spin 2s ease-out infinite;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}
@mixin loading-bkg($value) {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background: $value;
  z-index: 2;
}

/*Cart page*/

input[type=number] {
    -moz-appearance: textfield;
}
input[type="search"], 
input[type="number"], 
input[type="email"], 
input[type="password"] {
    -webkit-appearance: none;
    -moz-appearance: none;
}
input[type=number]::-webkit-inner-spin-button, 
input[type=number]::-webkit-outer-spin-button { 
  -webkit-appearance: none; 
  margin: 0; 
}
.cart-page__items-table {
  width: 100%;
}
.cart-page__tbody {
  font-size: 14px;
}
.cart__row {
  border: 1px solid $color_border_table;
  border-bottom: none;
  th {
    padding: 15px 25px;
    text-transform: uppercase;
    font-family: var(--fm_second);
    font-size: 13px;
  }
}
.cart__row--last {
  border-bottom: 1px solid $color_border_table;
}
.cart__row--item {
  @media(max-width: $mobile_width) {
    padding: 10px;
    display: inline-block;
  }
  td {
    padding: 5px;
    text-align: left;
    @media(min-width: $min_tablet_small_width) {
      padding: 10px;
    }
  }
}

.cart__image-wrapper {
  padding: 10px;
  width: 30%;
  @media(min-width: $min_tablet_small_width) {
    width: 11%;
    padding: 15px;
  }
  @media(min-width: $min_tablet_large_width) {
    width: 85px;
  }
  @media(min-width: $desktop_width) {
    width: 100px;
  }
}
.cart__summary {
  .product-price__price {
    font-size: 20px;
  }
}
.cart__price-wrapper {
  .product-price__price {
    font-weight: $fw_thin;
  }
}
@media(max-width: $mobile_width) {
  .cart-page__content {
    tr {
      td {
        display: table-cell;
        padding: 6px 5px;
        &.cart__price-wrapper {
          display: none;
        }
      }
    }
  }
  .cart__image {
    width: 100%;
  }
  .cart__image-wrapper {
    float: left;
    padding: 0;
    border: none;
  }
  .cart__meta,
  .cart__price-wrapper,
  .cart__update-wrapper,
  .cart__total-row,
  .cart__remove-row {
    float: right;
    width: 70%;
    padding: 10px 32px 10px 15px;
    text-align: left;
    border: none;
  }
  .cart__header {
    display: none;
  }
}
.cart__actions {
  @include align-items(center);
  @include justify-content(center);
}
.cart__update {
